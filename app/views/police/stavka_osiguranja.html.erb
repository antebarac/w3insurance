 <% @stavke.each do |stavka| %>
   <input type="hidden" value="<%= stavka.premija.round(2) %>" name="premija_stavke"/>
  <% if stavka.simple_stavka? %>
    <div class='span-15 last'>
      <div class='span-1'><%= stavka.oznaka %></div>
      <div class='span-7'><%= stavka.opis %></div>
      <div class='span-3 right'><%= to_c(stavka.svota_osiguranja) %></div>
      <div class='span-2 right'><%= stavka.stopa %></div>
      <div class='span-2 last right'><%= to_c(stavka.premija) %></div>
    </div>
  <% else %>
    <div class='span-12'><%= stavka.opis %></div>
    <div class='span-3 last right'><%= to_c(stavka.premija) %></div>
        <em class="quiet">
        <div class='span-15'>
          <div class='span-1 prepend-1'><%= stavka.oznaka %></div>
          <div class='span-6'><%= stavka.opis %></div>
          <div class='span-3 right'><%= to_c(stavka.svota_osiguranja) %></div>
          <div class='span-2 right' ><%= stavka.stopa %></div>
          <div class='span-2 last right'><%= to_c(stavka.temeljna_premija) %></div>
        </div>
          <% (stavka.doplatci + stavka.popusti).each do |item| %>
          <div class='span-15'>
            <div class='span-1 prepend-1'><%= item.oznaka %></div>
            <div class='span-6'><%= item.opis %></div>
            <div class='span-3'>&nbsp;</div>
            <div class='span-2 right'><%= item.stopa %></div>
            <div class='span-2 last right'><%= to_c(item.premija) %></div>
          </div>
          <% end %>
          </em>
  <% end %>
<% end %>
<div class="span-16 last"><br><hr></div>
